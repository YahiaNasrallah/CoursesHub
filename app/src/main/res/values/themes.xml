<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoursesApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimaryContainer">@color/black</item>

        <item name="colorPrimary">@color/new_primary</item>
        <item name="colorPrimaryVariant">@color/new_primary</item>
        <item name="colorOnPrimary">@color/new_on_primary</item>

        <!-- اللون الثانوي -->
        <item name="colorSecondary">@color/new_secondary</item>
        <item name="colorSecondaryVariant">@color/new_secondary</item>
        <item name="colorOnSecondary">@color/new_on_primary</item>

        <!-- لون شريط الحالة -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- لون النص والرموز -->
        <item name="android:textColorPrimary">@color/new_on_primary</item>
        <item name="android:textColorSecondary">@color/new_secondary</item>

        <item name="tabIndicatorColor">@color/new_primary</item>
        <item name="tabSelectedTextColor">@color/new_primary</item>
        <item name="tabTextColor">@color/new_secondary</item>








        <item name="android:windowOverscan">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="itemRippleColor">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorControlActivated">@color/black</item>




    </style>
    <style name="TextAppearance.App.BottomNavigation" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="Theme.CoursesApp" parent="Base.Theme.CoursesApp" />
</resources>