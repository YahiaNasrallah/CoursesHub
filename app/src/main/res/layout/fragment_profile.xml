<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:id="@+id/lin_showdata"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="end"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/baseline_edit_square_24"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/image_user_profile"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cardgradint1"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_UserName"
        android:layout_width="wrap_content"
        android:text="UserName"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ongoing"
                android:layout_width="match_parent"
                android:text=" 1 Ongoing"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_completes"
                android:layout_width="match_parent"
                android:text=" 2 Complete"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>






    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:text="Email"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:layout_height="50dp"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:text="Phone"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/baseline_local_phone_24"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:layout_height="50dp"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:text="LogOut"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/baseline_logout_24"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:layout_height="50dp"/>



    <TextView
        android:id="@+id/tv_joinedin"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Joined on"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/lin_editdata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_back_fromedit"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:padding="10dp"

                android:src="@drawable/baseline_arrow_back_24"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_edit"
            android:layout_width="100dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/image_user_edit"
                android:layout_width="match_parent"
                android:src="@drawable/cardgradint1"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/ed_UserName"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:hint="UserName"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/person_icon"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_height="50dp"/>





        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            />


        <EditText
            android:id="@+id/ed_email"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:hint="Email"
            android:padding="10dp"
            android:inputType="textEmailAddress"

            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:layout_height="50dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/ed_phone"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:hint="Phone"
            android:padding="10dp"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/baseline_local_phone_24"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:layout_height="50dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/ed_password"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:hint="Password"
            android:padding="10dp"
            android:inputType="textVisiblePassword"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/ed_repassword"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:hint="RePassword"
            android:padding="10dp"
            android:inputType="textVisiblePassword"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:layout_height="50dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_changes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Save"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

</LinearLayout>