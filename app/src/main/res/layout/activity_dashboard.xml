<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cardgradint1"
    tools:context=".DashboardActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="CourseHub"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textColor="@color/color2"
        android:fontFamily="@font/futuraround"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Dashboard"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/futuraround"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_addCourse"
        android:layout_width="350dp"
        android:layout_marginTop="100dp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/color1"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="Add Courses"
        android:layout_height="60dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ShowAllCourses"
        android:layout_width="350dp"
        app:cornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/color1"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="Show All Courses"
        android:layout_height="60dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:layout_height="2dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_addLecture"
        android:layout_width="350dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Add Lecture"
        android:layout_height="60dp"/>
</LinearLayout>