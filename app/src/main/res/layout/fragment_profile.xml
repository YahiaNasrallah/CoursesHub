<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:id="@+id/lin_showdata"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="end"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/baseline_edit_square_24"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/image_user_profile"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cardgradint1"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_UserName"
        android:layout_width="wrap_content"
        android:text="UserName"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bebasneueregular"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ongoing"
                android:layout_width="match_parent"
                android:text=" 1 Ongoing"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_completes"
                android:layout_width="match_parent"
                android:text=" 2 Complete"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>






    <TextView
        android:id="@+id/tv_email"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:text="Email"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:layout_height="50dp"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:text="Phone"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/baseline_local_phone_24"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:layout_height="50dp"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:text="LogOut"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/baseline_logout_24"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:layout_height="50dp"/>



    <TextView
        android:id="@+id/tv_joinedin"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Joined on"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/lin_editdata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_back_fromedit"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:padding="10dp"

                android:src="@drawable/baseline_arrow_back_24"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_edit"
            android:layout_width="100dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/image_user_edit"
                android:layout_width="match_parent"
                android:src="@drawable/cardgradint1"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_marginTop="20dp"

            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="160dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:paddingBottom="5dp"

                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_username"
                    android:layout_width="match_parent"
                    android:hint="FirstName"
                    android:inputType="textPersonName"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="65dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="180dp"
                android:layout_gravity="center"
                android:paddingBottom="5dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="LastName"
                    android:inputType="textPersonName"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="65dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"

            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="65dp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"

            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:hint="Phone"
                android:textStyle="bold"
                android:inputType="phone"

                android:layout_gravity="center"
                android:layout_height="65dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"

            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:hint="Password"
                android:textStyle="bold"
                android:inputType="textPassword"

                android:layout_gravity="center"
                android:layout_height="65dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"

            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_repassword"
                android:layout_width="match_parent"
                android:hint="RePassword"
                android:textStyle="bold"
                android:inputType="textPassword"

                android:layout_gravity="center"
                android:layout_height="65dp"/>
        </com.google.android.material.textfield.TextInputLayout>








        <com.google.android.material.divider.MaterialDivider
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_changes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Save"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

</LinearLayout>